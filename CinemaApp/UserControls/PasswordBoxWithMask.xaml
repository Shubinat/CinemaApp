<UserControl x:Class="CinemaApp.UserControls.PasswordBoxWithMask"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CinemaApp.UserControls"
             mc:Ignorable="d">
    <Grid>
        <TextBox x:Name="TBox" TextChanged="TBox_TextChanged"/>
        <PasswordBox x:Name="PBox" PasswordChanged="PBox_PasswordChanged"/>
    </Grid>
</UserControl>
