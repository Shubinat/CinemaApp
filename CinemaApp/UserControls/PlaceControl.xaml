<UserControl x:Class="CinemaApp.UserControls.PlaceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CinemaApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    <Grid Height="50" Width="50">
        <Grid x:Name="GridSelection" Background="#33808080" Visibility="Hidden"/>
        <Image x:Name="ImgPlace" Source="{Binding}" Mouse.MouseEnter="ImgPlace_MouseEnter" MouseLeave="ImgPlace_MouseLeave"/>
    </Grid>
</UserControl>
