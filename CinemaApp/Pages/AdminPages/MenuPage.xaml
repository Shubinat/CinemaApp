<Page x:Class="CinemaApp.Pages.AdminPages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CinemaApp.Pages.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Админская панель" Loaded="Page_Loaded">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Style="{StaticResource TBlockHeader}" x:Name="TBlockHello" Width="350" TextWrapping="Wrap" TextAlignment="Center"/>
            <Button Content="Список пользователей" Width="250" x:Name="BtnUsers" Click="BtnUsers_Click"/>
            <Button Content="Список сеансов" x:Name="BtnSessions" Width="250" Click="BtnSessions_Click" />
            <Button Content="Список фильмов" Width="250" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
