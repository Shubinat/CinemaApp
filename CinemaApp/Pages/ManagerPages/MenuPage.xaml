<Page x:Class="CinemaApp.Pages.ManagerPages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CinemaApp.Pages.ManagerPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Работа с клиентами" Loaded="Page_Loaded">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Style="{StaticResource TBlockHeader}" x:Name="TBlockHello" Width="350" TextWrapping="Wrap" TextAlignment="Center"/>
            <Button Content="Список фильмов" Width="250" x:Name="BtnMovies" Click="BtnMovies_Click"/>
            <Button Content="Список сеансов" Width="250" x:Name="BtnSessions" Click="BtnSessions_Click"/>
            <Button Content="Список билетов" Width="250" x:Name="BtnTickets" Click="BtnTickets_Click"/>
        </StackPanel>
    </Grid>
</Page>
